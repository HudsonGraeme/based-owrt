config ui 'features'
	option dashboard '1'
	option network '1'
	option wireless '1'
	option firewall '1'
	option dhcp '1'
	option dns '1'
	option wireguard '1'
	option qos '1'
	option ddns '1'
	option diagnostics '1'
	option system '1'
	option backup '1'
	option packages '1'
	option services '1'
	option ssh_keys '1'
	option storage '1'
	option leds '1'
	option firmware '1'

config ui 'presets'
	option description 'Presets for common configurations'

config preset 'full_router'
	option name 'Full Router'
	option description 'All features enabled (default)'

config preset 'ap_switch'
	option name 'AP/Switch (Layer 2)'
	option description 'Disable L3 features: firewall, dhcp, qos, wireguard, ddns'
	option firewall '0'
	option dhcp '0'
	option qos '0'
	option wireguard '0'
	option ddns '0'
	option dns '0'

config preset 'minimal'
	option name 'Minimal'
	option description 'Dashboard and system settings only'
	option network '0'
	option wireless '0'
	option firewall '0'
	option dhcp '0'
	option dns '0'
	option wireguard '0'
	option qos '0'
	option ddns '0'
	option diagnostics '0'
	option backup '0'
	option packages '0'
	option services '0'
	option ssh_keys '0'
	option storage '0'
	option leds '0'
	option firmware '0'
