{
	"name": "based-owrt",
	"version": "0.1.0",
	"type": "module",
	"description": "Modern management interface for OpenWrt routers",
	"keywords": [
		"openwrt",
		"ubus",
		"management",
		"ui",
		"theme",
		"vanilla-js",
		"spa",
		"router"
	],
	"author": "",
	"license": "MIT",
	"scripts": {
		"dev": "node scripts/watch.js qemu",
		"dev:physical": "node scripts/watch.js",
		"deploy": "scp -r custom/* root@192.168.1.1:/www/custom/",
		"build": "node scripts/build.js",
		"format": "prettier --write \"custom/**/*.{js,css,html}\" \"scripts/**/*.js\" \"index.html\"",
		"format:check": "prettier --check \"custom/**/*.{js,css,html}\" \"scripts/**/*.js\" \"index.html\"",
		"tauri": "tauri",
		"tauri:dev": "tauri dev",
		"tauri:build": "tauri build"
	},
	"devDependencies": {
		"@tauri-apps/api": "^2.9.1",
		"@tauri-apps/cli": "^2.9.6",
		"chokidar": "^5.0.0",
		"clean-css": "^5.3.3",
		"prettier": "^3.8.1",
		"terser": "^5.36.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/HudsonGraeme/based-owrt"
	}
}
