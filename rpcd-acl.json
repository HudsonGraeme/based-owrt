{
	"based-openwrt": {
		"description": "ACL permissions for Based OpenWrt interface",
		"read": {
			"file": {
				"/usr/lib/opkg/status": ["read"],
				"/var/lib/opkg/status": ["read"],
				"/proc/net/dev": ["read"],
				"/proc/net/arp": ["read"],
				"/proc/stat": ["read"],
				"/etc/crontabs/root": ["read"],
				"/etc/dropbear/authorized_keys": ["read"],
				"/etc/hosts": ["read"],
				"/tmp/firmware.bin": ["read"]
			},
			"ubus": {
				"network.interface": ["dump", "up", "down"],
				"network.wireless": ["status"],
				"uci": ["get", "set", "add", "delete", "commit"],
				"file": ["read", "write", "exec"],
				"system": ["info", "board", "reboot"],
				"luci-rpc": ["getDHCPLeases"],
				"service": ["list"]
			},
			"uci": [
				"based",
				"network",
				"wireless",
				"firewall",
				"dhcp",
				"system",
				"qos",
				"ddns"
			]
		},
		"write": {
			"ubus": {
				"uci": ["set", "add", "delete", "commit"],
				"file": ["write", "exec"],
				"system": ["reboot"],
				"network.interface": ["up", "down"],
				"service": ["list"]
			},
			"uci": [
				"network",
				"wireless",
				"firewall",
				"dhcp",
				"system",
				"qos",
				"ddns"
			]
		}
	}
}
