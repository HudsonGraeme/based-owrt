{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Based Router Manager",
  "version": "0.1.0",
  "identifier": "com.hudsongraeme.based",
  "build": {
    "frontendDist": "custom",
    "devUrl": "http://localhost:8080",
    "beforeDevCommand": "",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "Based Router Manager",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "dangerousRemoteDomainIpcAccess": [
        {
          "domain": "localhost",
          "enableTauriAPI": false
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "identifier": "com.hudsongraeme.based",
    "publisher": "HudsonGraeme",
    "copyright": "Copyright (c) 2026 HudsonGraeme",
    "shortDescription": "Modern OpenWrt router management interface",
    "longDescription": "Based Router Manager provides a modern web interface for managing OpenWrt routers via the native ubus API."
  }
}
